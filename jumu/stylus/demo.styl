*
	margin 0 auto
	padding 0
	font-family Microsoft YaHei
	font-weight normal
ul
	list-style none
a
	text-decoration none
body
	width 100%
	height 100%
	
	/*文档头部*/
header
	max-width 1280px
	position relative
	padding 1% 0 1% 0
	.he_left
		width 40%
		display inline-block
	div div,div h2
		display inline-block
		overflow hidden
	& div div:nth-child(1)
		border-right thin solid #000
		width 35%
		img
			width 80%
	h2
		width 20%
		text-align center
		position absolute
		top 50%
		transform translateY(-50%)
	.he_right
		display inline-block
		width 15%
		margin-left 35%
		img
			width 12%
			vertical-align text-top
		p
			padding 0 0 0 14%
			margin-top -2%
			color #f4830a
	/*banner区域*/
.banner
	width 100%
	height 100%
	.banner-box
		width 100%
		padding 14% 0
		overflow hidden
		position relative
		a
			display block
			height 100%
			width 100%
			position absolute
			left 0
			top 0
			img
				width 100%
				height 100%
				
	/*导航区域*/
.navbox
	width 100%
	background #000
	ul
		max-width 1280px
		overflow hidden
		text-align center
		li 
			display inline-block
			line-height 60px
			cursor pointer
			a
				color #fff
				height 60px
			&:hover
				background #e14b2f
	/*正文区域*/
.wares
	width 100%
	.wares-box
		width 1300px
		overflow hidden
		.w-title
			width 100%
			text-align center
			padding-bottom 3%
			h2
				width 30%
				margin 0 auto
				padding 5% 5% 2% 5%
				background url(../images/boder.png) no-repeat 50% 75%/45%
			p
				color #e14b2f
				font-size 110%
				letter-spacing 3px
		.modle
			width 100%
			text-align center
			div
				opacity 0.5
				width 10%
				display inline-block
				padding 2% 3% 5%
				margin 5% 8% 0
				border thin solid #fff
				background url(../images/modle0.png) no-repeat 50% 20%/55%
				transition all 0.5s ease
				-webkit-transition all 0.5s ease
				-moz-transition all 0.5s ease
				-o-transition all 0.5s ease
				&:hover
					opacity 1
					border thin solid #0068b7
					background url(../images/modle.png) no-repeat 50% 20%/55%
					
					
					
				a
					color #000
					p
						font-size 147%
						padding 110% 5% 5%
		.option_top
			width 100%
			height 100%
			margin-top 2%
			overflow hidden
			background url(../images/mod-bg.png) 50% 0%/86%no-repeat 
			.option_bg
				
				span
					font-size 147%
					display block
				.op_bg_1
					padding 8% 5% 6% 11.5%
				.op_bg_2		
					margin -6% 5% 5% 34.5%
					
				.op_bg_3		
					margin -11.5% 5% 5% 59%
				.op_bg_4
					margin -5% 5% 4% 82.5%
			.option-text
				width 14.5%
				float left
				color #5e5e5e
			.op-float-1
				padding 2% 4% 1% 8%
			.op-float-2
				padding 4% 4% 1% 5%
			.op-float-3
				padding 0% 4% 1% 6%
			.op-float-4
				padding 2.5% 0% 0% 4%
		.production
			width 100%
			margin-top 8%
			overflow hidden
			padding 0 0 4% 7%
			box-shadow 0 4px 5px #e5e4e4
			.pro-float
				float left
			:nth-child(2)
				width 60%
				margin 0 0
				h2
					margin-left 10%
					display inline-block
					padding 0 0 2% 0
					width 38%
					color #fe730c
					border-bottom thin solid #fe730c
				p
					padding 2% 0 0 10%
					width 60%
					color #665950
					line-height 180%
		.production-last
			width 100%
			margin-top 8%
			overflow hidden
			padding 0 0 4% 7%
			box-shadow 0 4px 5px #e5e4e4
			.pro-float-last
				float left
			:nth-child(1)
				width 50%
				margin 0 0
				h2
					margin-right 5%
					padding 0 0 2% 0
					width 45%
					color #fe730c
					border-bottom thin solid #fe730c
					float right
					text-align right
				p
					margin 0 0
					clear both
					width 72%
					color #665950
					line-height 180%
					padding 2% 0 0 23%
			.pro-float-last2
				float left
				img
					width 100%
		/*第七层*/
		.mode
			width 100%
			ul
				display block
				overflow hidden
				text-align center
				li
					display inline-block
					width 24%
					padding 1% 0%
					a
						position relative
						overflow hidden
						display block
						color #6a6064
						border thin solid rgba(71,95,117, 0.2)
						.mode-number
							padding 1% 0
							line-height 150%
						img
							width 100%
						.mode-hover
							width 100%
							height 100%
							color #fff
							position absolute
							top 0
							left -100%
							z-index 4
							background url(../images/border.png) no-repeat center 50%/39% rgba(71,95,117, 0.8)
							transition all .3s ease-in-out
							-webkit-transition all .3s ease-in-out
							-moz-transition all .3s ease-in-out
							-o-transition all .3s ease-in-out

							h2,h3
								margin 2%
							p
								background #fe730c
								width 25%
							h2
								margin-top 24%
					&:hover .mode-hover
						position absolute
						left 0%
	footer
		margin-top 5%
		width 100%
		height 100px
		background #000
		text-align center
		color #979494
		span
			display inline-block
			padding-top 2%




			

@media only screen and (min-width:800px)
	body
		font-size 12px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 14%

@media only screen and (min-width:1024px)
	body
		font-size 12px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 15%
			ul li a
				font-size 20px

@media only screen and (min-width:1280px)
	body
		font-size 12px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 17%
			ul li a
				font-size 26px

@media only screen and (min-width:1440px)
	body
		font-size 14px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 17%
			ul li a
				font-size 26px

@media only screen and (min-width:1600px)
	body
		font-size 16px
		.he_right
			font-size 14px
		.navbox
			ul li
				width 17%
			ul li a
				font-size 26px
			
@media only screen and (min-width:1920px)
	body
		font-size 16px
		.he_right
			font-size 14px
		.navbox
			ul li
				width 18%
			ul li a
				font-size 26px
		

