*
	margin 0 
	padding 0
	font-family Microsoft YaHei
	font-weight normal
ul
	list-style none
a
	text-decoration none
body
	width 100%
	height 100%
.main
	margin 0 auto
	/*文档头部*/
header
	max-width 1280px
	position relative
	padding 1% 0 1% 0
	.he_left
		width 40%
		display inline-block
	div div,div h2
		display inline-block
		overflow hidden
	& div div:nth-child(1)
		border-right thin solid #000
		width 35%
		img
			width 80%
	h2
		width 20%
		text-align center
		position absolute
		top 50%
		transform translateY(-50%)
	.he_right
		display inline-block
		width 15%
		margin-left 35%
		img
			width 12%
			vertical-align text-top
		p
			padding 0 0 0 14%
			margin-top -2%
			color #f4830a
	/*banner区域*/
.banner
	width 100%
	height 100%
	.banner-box
		width 100%
		padding 14% 0
		overflow hidden
		position relative
		a
			display block
			height 100%
			width 100%
			position absolute
			top 0
			left 0
			img
				width 100%
				height 100%
.navbox
	width 100%
	background #000
	ul
		max-width 1280px
		overflow hidden
		text-align center
		li 
			display inline-block
			line-height 60px
			cursor pointer
			a
				color #fff
				height 60px
			&:hover
				background #e14b2f

// 面包屑导航
.bread
	width 100%
	.bread-box
		max-width 1300px
		margin 0 auto
		.bread-text
			color #b7b5b5
			overflow hidden
			padding 2% 0 1% 0
			border-bottom thin solid #b5acac
			p
				float left
				line-height 200%
				a
					color #b7b5b5
					padding 0 5px
					&:hover
						color #fe730c
			.bread-input
				float right
				width 24%
				form
					margin-right 5%
					.sousuo
						border thin solid #fe730c
						border-radius 3px
						padding 0 1%
						width 75%
						height 28px
						outline none
					.queren
						cursor pointer
						border none
						border-radius 0 3px 3px 0
						margin-left -8px
						height 30px
						width 38px
						background url(../images/sousuo.png) no-repeat center 50% #fe730c
		.choose
			width 100%
			overflow hidden
			padding-top 2%
			.choose-left
				width 15%
				float left
				text-align center
				.choose-title
					width 100%
					background #000
					color #fff
					padding 7% 0%
					border-radius 5px
					font-size 130%
				.choose-option
					margin-top 1%
					width 99%
					border thin solid #7d7d7d
					ul
						
						border-radius 1px 1px 0 0
						height 750px
						li 
							font-size 110%
							// border-right thin solid #7d7d7d
							border-bottom thin solid #bdbdbd
							position relative
							z-index 50
							cursor pointer
							a
								color #353535
								width 100%
								padding 6% 0
								display inline-block
								.choose-bg
									display none
									width 104.5%
									height 100%
									position absolute
									top 0
									left 0
									z-index -1
									img
										width 100%
										height 100%
								.choose-box
									display block
							.cha
								color #fff
							&:hover .choose-bg
								display block
							&:hover a
								color #fff
			.choose-right
				width 83%
				float left
				text-align center
				margin 0 auto
				padding-left 2%
				.mode-box
					display none
				.mode
					width 100%
					ul
						display block
						overflow hidden
						text-align center
						li
							display inline-block
							width 24%
							padding 1% 0%
							a
								position relative
								overflow hidden
								display block
								color #6a6064
								border thin solid rgba(71,95,117, 0.2)
								.mode-number
									padding 1% 0
									line-height 150%
								img
									width 100%
								.mode-hover
									width 100%
									height 100%
									color #fff
									position absolute
									top 0
									left -100%
									z-index 4
									background url(../images/border.png) no-repeat center 50%/39% rgba(71,95,117, 0.8)
									transition all .3s ease-in-out
									-webkit-transition all .3s ease-in-out
									-moz-transition all .3s ease-in-out
									-o-transition all .3s ease-in-out

									h2,h3
										margin 2%
									p
										background #fe730c
										width 35%
										margin 0 auto
										
									h2
										margin-top 24%
							&:hover .mode-hover
								position absolute
								left 0%
				.page
					width 75%
					text-align center
					margin 4% auto
					span a
						color #a6a3a3
					.let
						letter-spacing -5px
					ul
						display inline-block
						margin 0 2%
						li
							width 23px
							height 23px
							display inline-block
							margin 0 2px
							border-radius 23px
							a
								display inline-block
								width 100%
								color #a6a3a3
							&.page-box
								background #000
							& .abox
								color #fff
	footer
		margin-top 5%
		width 100%
		height 100px
		background #000
		text-align center
		color #979494
		span
			display inline-block
			padding-top 2%






@media only screen and (min-width:800px)
	body
		font-size 12px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 14%

@media only screen and (min-width:1024px)
	body
		font-size 12px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 15%
			ul li a
				font-size 20px

@media only screen and (min-width:1280px)
	body
		font-size 12px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 17%
			ul li a
				font-size 26px

@media only screen and (min-width:1440px)
	body
		font-size 14px
		.he_right
			font-size 12px
		.navbox
			ul li
				width 17%
			ul li a
				font-size 26px

@media only screen and (min-width:1600px)
	body
		font-size 16px
		.he_right
			font-size 14px
		.navbox
			ul li
				width 17%
			ul li a
				font-size 26px
			
@media only screen and (min-width:1920px)
	body
		font-size 16px
		.he_right
			font-size 14px
		.navbox
			ul li
				width 18%
			ul li a
				font-size 26px
				